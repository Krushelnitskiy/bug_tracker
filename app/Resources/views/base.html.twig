<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8"/>
	<title>{% block title %}{{ "layout.title"|trans }}{% endblock %}</title>

	{% block stylesheets %}
		{% stylesheets 'bundles/trackerhome/css/*' filter='cssrewrite' output='css/app.css' %}
			<link rel="stylesheet" href="{{ asset_url }}" />
		{% endstylesheets %}
	{% endblock %}

	<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
<body>
<nav class="container">
	<div class="">
		<div class="pull-left">
			{% block logo %}
				<div class="logo">
					<a href="{{ path('home_page') }}">Tracker</a>
				</div>
			{% endblock logo %}
		</div>
		{% block menu %}
			<div class="menu">
				{% if is_granted('IS_AUTHENTICATED_FULLY') %}
					<a href="{{ path("project") }}">
						{{ "layout.menu.projects"|trans }}
					</a>
					|
					<a href="{{ path("issue") }}">
						{{ "layout.menu.myIssues"|trans }}
					</a>
					|
					<a href="{{ path("user") }}">
						{{ "layout.menu.users"|trans }}
					</a>
				{% endif %}
			</div>
		{% endblock menu %}

		<div class="pull-right">
			{% block auth %}
				<div class="auth">
					{% if is_granted('IS_AUTHENTICATED_FULLY') %}
						{{ 'layout.logged_in_as'|trans }}
						{% if app.user.getWebPath() %}
							<a href="{{ path("fos_user_profile_show") }}">
								<img src="{{ app.user.getWebPath() }}" width="48"/>
							</a>
						{% endif %}
						<a href="{{ path("fos_user_profile_show") }}">{{ app.user.username }}</a>  |
						<a href="{{ path('fos_user_security_logout') }}">
							{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
						</a>
					{% endif %}
				</div>
			{% endblock auth %}
		</div>
	</div>
</nav>

<div class="container">
	{% for flashMessage in app.session.flashbag.get('notice') %}
		<div class="flash-notice bg-warning">
			{{ flashMessage }}
		</div>
	{% endfor %}
</div>


<div class="container">
	{% block body %}
		{% block header %}
		{% endblock %}

		{% block content %}
		{% endblock %}

		{% block footer %}
		{% endblock %}
	{% endblock %}
</div>

{% block javascripts %}
	{% javascripts
	'@TrackerHomeBundle/Resources/public/js/jquery-2.1.3.min.js'
	'@TrackerIssueBundle/Resources/public/js/form.js' %}
	<script src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}
</body>
</html>
