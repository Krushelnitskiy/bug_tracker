{% extends '::base.html.twig' %}

{% form_theme form 'TrackerProjectBundle:Form:fields.html.twig' %}

{% block body -%}
    <h3>{{ "issue.page.createSubTask.title"|trans }}</h3>
    <p>
	    {% if project is empty %}
		    <a href="{{ path('issue') }}">
			    {{ "issue.action.back"|trans }}
		    </a>
	    {% else %}
		    <a href="{{ path('project_issues', { 'project': project.code}) }}">
			    {{ "issue.action.backProject"|trans }}
		    </a>
	    {% endif %}
    </p>
    {{ form(form, {'attr':{'class':"form-horizontal"}}) }}
{% endblock %}
