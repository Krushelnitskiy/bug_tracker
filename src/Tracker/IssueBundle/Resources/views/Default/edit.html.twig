{% extends '::base.html.twig' %}

{% form_theme edit_form 'TrackerProjectBundle:Form:fields.html.twig' %}

{% block title %}
    {{ "issue.page.edit.title"|trans }}
{% endblock %}

{% block header %}
    <header class="breadcrumbs">
        <ul class="breadcrumbs">
            <li>
                <a href="{{ path('project_show', {project:entity.project.code}) }}">
                    {{ entity.project.code }} {{ entity.project.summary }}
                </a>
            </li>
        </ul>

        <h1>{{ "issue.page.edit.title"|trans }}</h1>
    </header>
{% endblock %}

{% block content %}
    {{ form(edit_form,  {'attr':{'class':"form-horizontal"}} ) }}
{% endblock %}
