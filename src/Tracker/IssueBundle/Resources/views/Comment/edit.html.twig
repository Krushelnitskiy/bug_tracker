{% extends '::base.html.twig' %}

{% form_theme edit_form 'TrackerProjectBundle:Form:fields.html.twig' %}

{% block header %}
    <header class="breadcrumbs">
        <ul class="breadcrumbs">
            <li>
                <a href="{{ path('issue_show', {'issue': entity.issue.code}) }}">
                    {{ entity.issue.code }} {{ entity.issue.summary }}
                </a>
            </li>
        </ul>

        <h1>{{ "issue.comment.page.edit.title"|trans }}</h1>
    </header>
{% endblock %}

{% block content %}
	{{ form(edit_form, {'attr':{'class':"form-horizontal"}}) }}
{% endblock %}
