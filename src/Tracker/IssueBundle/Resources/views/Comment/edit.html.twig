{% extends '::base.html.twig' %}

{% form_theme edit_form 'TrackerProjectBundle:Form:fields.html.twig' %}

{% block body -%}
	<h3>{{ "issue.comment.page.edit.title"|trans }}</h3>

	{% if project is empty %}
		<a href="{{ path('issue_show', {'issue': entity.issue.code}) }}">
			{{ entity.issue.summary }} (My issues)
		</a>
	{% else %}
		<a href="{{ path('project_issue_show', { 'issue': entity.issue.code, 'project': project.code}) }}">
			{{ entity.issue.summary }} (Project issues)
		</a>
	{% endif %}

	{{ form(edit_form, {'attr':{'class':"form-horizontal"}}) }}
{% endblock %}
