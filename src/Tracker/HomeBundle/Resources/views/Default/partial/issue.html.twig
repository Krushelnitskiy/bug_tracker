<table class="table table-bordered">
    <thead>
    <tr>
        <th>  {{ "issue.grid.code"|trans }}</th>
        <th>  {{ "issue.grid.summary"|trans }}</th>
        <th>  {{ "issue.grid.project"|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for issue in issues %}
        <tr>
            <td class="code"><a href="{{ path('issue_show', { 'issue': issue.code }) }}">{{ issue.code }}</a></td>
            <td>{{ issue.summary }}</td>
            <td><a href="{{ path('project_show', { 'project': issue.project.code }) }}">{{ issue.project.label }}</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>