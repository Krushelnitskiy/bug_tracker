<table class="table table-bordered">
	<thead>
	<tr>
		<th>{{"activity.grid.event"|trans }}</th>
		<th>{{"activity.grid.issue"|trans }}</th>
		<th>{{"activity.grid.user"|trans }}</th>
		<th>{{"activity.grid.createAt"|trans }}</th>
	</tr>
	</thead>
	<tbody>
	{% for activity in activities %}
		<tr>
			<td>{{ activity.event|trans }}</a></td>
			<td><a href="{{ path('issue_show', { 'issue': activity.issue.code }) }}">{{ activity.issue.summary }}</a>
			</td>
			{% if is_granted('view', activity.user) %}
				<td><a href="{{ path('user_show', { 'user': activity.user.id }) }}">{{ activity.user.username }}</a>
				</td>
			{% else %}
				<td>{{ activity.user.username }}</td>
			{% endif %}
			<td>{{ activity.created|date('d.m.Y H:i:s') }}</a></td>
		</tr>
	{% endfor %}
	</tbody>
</table>